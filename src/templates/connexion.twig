{% extends 'base.html.twig' %}
{% block title %}
	Connexion
{% endblock %}
{% block mainContent %}
	<section>
		{% if message is same as("loggedSuccessfully") %}
			<div class="validation-msg-container">
				<b class="validation-msg">
					Connexion réussie
				</b>
			</div>
		{% endif %}
		{% if message is same as("connexionFailed")%}
			<div class="error-msg-container">
				<b class="error-msg">
					{% if errorMessage is same as("emailError")%}Connexion refusée (L'email n'existe pas){% endif %}
                    {% if errorMessage is same as("passwordError")%}Connexion refusée (mot de passe incorrect){% endif %}
                </b>
			</div>
		{% endif %}
		<h1>Connexion</h1>
		<form class="flex-col-center" action="{{pathToPublic}}connexion/valider" method="POST">
			<label for="email">Email</label><input class="input-txt" id="email" name="email" type="email" required/>
			<label for="password">Mot de passe</label><input class="input-txt" id="password" name="password" type="password" required/>
			<button type="submit">Envoyer</button>
		</form>
	</section>
{% endblock %}
